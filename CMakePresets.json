{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux",
      "displayName": "Linux (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "RESCUEOPS_BUILD_UI": "OFF",
        "RESCUEOPS_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "RESCUEOPS_BUILD_UI": "OFF",
        "RESCUEOPS_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows (VS 2022 x64)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows",
      "architecture": "x64",
      "cacheVariables": {
        "RESCUEOPS_BUILD_UI": "OFF",
        "RESCUEOPS_BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux",
      "configurePreset": "linux"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "windows",
      "configurePreset": "windows",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "linux",
      "configurePreset": "linux",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows",
      "configurePreset": "windows",
      "configuration": "RelWithDebInfo",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
